<statements xmlns="http://qafe.com/schema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://qafe.com/schema http://www.qafe.com/schema/application-statements.xsd">
	<batch id="setup">
		<query sql="create table qafe_test_query (id VARCHAR PRIMARY KEY, name VARCHAR)"/>
		<!--<query sql="ALTER TABLE users ADD CONSTRAINT PK PRIMARY KEY (id)"/> -->
		<insert sql="insert into qafe_test_query (id, name) values('0', 'A')"/>
		<insert sql="insert into qafe_test_query (id, name) values('2', 'C')"/>
		<insert sql="insert into qafe_test_query (id, name) values('3', 'marc')"/>
		<insert sql="insert into qafe_test_query (id, name) values('4', 'D')"/>
		<insert sql="insert into qafe_test_query (id, name) values('5', 'marc')"/>
		<insert sql="insert into qafe_test_query (id, name) values('6', 'marc')"/>
		<insert sql="insert into qafe_test_query (id, name) values('7', 'marc')"/>
		<insert sql="insert into qafe_test_query (id, name) values('8', 'marc8')"/>
		<insert sql="insert into qafe_test_query (id, name) values('9', 'Z')"/>
		<insert sql="insert into qafe_test_query (id, name) values('1', 'B')"/>
	</batch>
	<batch id="teardown">
		<query sql="drop table qafe_test_query"/>
	</batch>
	<query id="getUsersSqlAsAttribute" sql="select * from qafe_test_query"/>
	<query id="getUsersSqlAsText">select * from qafe_test_query</query>	
	<query id="getUsersSqlAsAttributeById" sql="select * from qafe_test_query where id=:id"/>	
	<query id="getUsersSqlAsTextById">select * from qafe_test_query where id=:id</query>	
	
</statements>